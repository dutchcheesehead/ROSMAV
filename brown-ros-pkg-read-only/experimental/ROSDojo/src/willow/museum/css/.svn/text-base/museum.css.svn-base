.robot-pose {
	border: 1px solid #759DC0;
    border-radius: 5px 5px 5px 5px;
    margin-bottom: 5px;
    margin-left: 5px;
    margin-right: 5px;
    background-color: #E5F2FE;
    position: relative;
}

.robot-pose .thumbnail,
.robot-pose .info {
	display: inline-block;
	float: left;
	box-sizing:border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
    padding: 5px;
}

.robot-pose .thumbnail {
	width: 30%;
	border-right: 1px solid #759DC0;
}

.robot-pose .info {
	width: 70%;    
	border-left: 1px solid #759DC0;
    margin-left: -1px;
}

.robot-pose .posedetails {
	font: 14px courier;
}

.robot-pose .posenumber {
    position: absolute;  
    left: 5px;  
    font-size: 20px;
    font-weight: bold;
	color: #254D70;
}

.pose-sequence {
    overflow: auto;
}

.korg-slider {
	position: relative;
	height: 250px;
	width: 39px;
	display: inline-block;
	border-radius: 12px;
	background-color: #EAEAEA;
}

.korg-slider .korg-slider-knob {
	background-image: url("../img/korg-slider.png");
	background-repeat: no-repeat;
	background-position: center;
	width: 100%;
	height: 106px;
	position: absolute;
}

.korg-slider .korg-slider-line {
	position: absolute;
	height: 212px;
	left: 19px;
	top: 19px;
	border: 1px solid #CCCCCC;
}

.korg-nanokontrol .korg-slider {
	margin: 10px;
}

.korg-nanokontrol .leftside,
.korg-nanokontrol .rightside {
	display: inline-block;
	float: left
}

.korg-nanokontrol .leftside {
	width: 25%;
}

.korg-nanokontrol .rightside {
	width: 75%
}

.korg-nanokontrol {
	border-radius: 20px;
	background-color: #CFEFFF;
}